{
  "version": 3,
  "configurePresets": [
    {
      "name": "pro",
      "displayName": "Pro Edition Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-pro",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_BUILD_TYPE": "Release",
        "PIVOT_EDITION": "PRO"
      }
    },
    {
      "name": "standard",
      "displayName": "Standard Edition",
      "inherits": "pro",
      "binaryDir": "${sourceDir}/build-standard",
      "cacheVariables": {
        "PIVOT_EDITION": "STANDARD"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "pro-release",
      "configurePreset": "pro",
      "configuration": "Release"
    },
    {
      "name": "standard-release",
      "configurePreset": "standard",
      "configuration": "Release"
    }
  ]
}
